.wrapper
  = render "templete/header"
  .banner
    .search-bar
      .search-bar__text chug it
      .search-bar__box
        .search-bar__box--form
          = search_form_for @search, url: search_index_path do |f|
            = f.text_field :name_cont ,placeholder: '検索するテキストを入力...'
            = f.submit ("検索") , class: 'search-btn'
  .main-contents
    %h1.review Latest Reviews
  .swiper-container{style:"margin-bottom:30px;"}
    .swiper-wrapper
      .swiper-slide{style:"display:flex;height:auto;justify-content:center;"}
        - @reviews.each do |review|
          .review{style:"min-height:300px;width:20vw;min-width:250px;margin:10px 5px;padding:5px;box-shadow:0 0 4px gray;border-radius:15px;"}
            .review__image{style:"border-bottom:grey 1px solid;height:70%;display:flex;justify-content:center;align-items:center;"}
              = link_to review_path(review.id) do
                = image_tag review.image, style: "object-fit:contain;max-width:200px; width:auto;"
            .review__brand{style:"height:10%;position:relative;"}
              %h2.brand{style:"position:absolute;bottom:0;font-weight:bold"}
                = review.maker
            .review__item-name{style:"height:10%;position:relative;"}
              %h2.name{style:"position:absolute;bottom:0;font-weight:bold"}
                = review.name
            .review__score
              %h2.score
                = (review.sweetness + review.sourness + review.bitterness + review.sharpness + review.richness)
                ／50点
